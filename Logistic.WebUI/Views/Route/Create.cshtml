@model Logistic.DAL.Entities.Route

@{ ViewData["Title"] = "Создание"; }

<div class="container">
    <h1>Добавление</h1>
    <hr/>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartPointId" class="control-label"></label>
                    <select asp-for="StartPointId" class="form-control">
                        @foreach (var point in ViewBag.Points)
                        {
                            <option value="@point.Id">@point.Name</option>
                        }
                    </select>
                    <span asp-validation-for="StartPointId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndPointId" class="control-label"></label>
                    <select asp-for="EndPointId" class="form-control">
                        @foreach (var point in ViewBag.Points)
                        {
                            <option value="@point.Id">@point.Name</option>
                        }
                    </select>
                    <span asp-validation-for="EndPointId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RouteLength" class="control-label"></label>
                    <input asp-for="RouteLength" class="form-control"/>
                    <span asp-validation-for="RouteLength" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Добавить" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Index">Назад</a>
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}